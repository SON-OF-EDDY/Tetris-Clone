<Game>
    canvas.before:
        Color:
            rgba:(255/255, 232/255, 31/255, 1)
        Rectangle:
            size:self.size
            pos:self.pos
            #source:'exp_back_13.PNG'

    Button:

        id:right_button
        id:right_button
        text:''
        size:root.width*0.15,root.width*0.2
        pos:root.width*0.25,0
        background_color:(0,0,0,0)
        on_press:root.move_shape_right()
        canvas.before:
            Color:
                #rgba:(1,0,0,1)
            Rectangle:
                source:'right_4.png'
                size:self.size
                pos:self.pos

    Button:
        id:left_button
        text:''
        size: root.width*0.15,root.width*0.2
        pos: 0,0
        background_color:(0,0,0,0)
        on_press:root.move_shape_left()
        canvas.before:
            Rectangle:
                source:'left_4.png'
                size:self.size
                pos:self.pos

    Button:
        id:rotate_button
        text:''
        size:root.width*0.15,root.width*0.2
        pos:root.width-(self.size[0]),0
        on_press:root.rotate_piece()
        background_color:(0,0,0,0)
        canvas.before:
            Rectangle:
                source:'rotate_5.png'
                size:self.size
                pos:self.pos


    Button:
        id:accelerate_button
        text:''
        size:root.width*0.15,root.width*0.2
        pos:root.width*0.6,0
        background_color:(0,0,0,0)
        canvas.before:
            Rectangle:
                source:'down_5.png'
                size:self.size
                pos:self.pos

    Label:
        id:next_block_label
        text:'NEXT BLOCK:'
        font_name:"propaganda"
        color:(204/255, 0, 0,1)
        font_size:root.width/22
        size:self.texture_size
        pos:root.width*0.01,root.height *0.165
        canvas.before:
            Color:
                rgba:(0,0,0,0)
            Rectangle:
                size:self.size
                pos:self.pos

    Label:
        id:score_label
        text:''
        font_name:"propaganda"
        color:(204/255, 0, 0,1)
        font_size:root.width/22
        size:self.texture_size
        pos:root.width*0.695,root.height *0.165
        canvas.before:
            Color:
                rgba:(0,0,0,0)
            Rectangle:
                size:self.size
                pos:self.pos

<GameScreen>:
    name:'game'
    Game:
        id:my_game

<SecondScreen>:
    name:'second'
    canvas:
        Rectangle:
            source:'exp_back_11.PNG'
            size:self.size
            pos:self.pos

    Label:
        font_size:root.width/7
        font_name:"propaganda"
        color:((204/255, 0, 0,1))
        text:"GAME OVER!"
        pos_hint:{'center_x':0.5,'center_y':0.9}

    Label:
        id:my_label
        font_name:"propaganda"
        font_size:root.width/12
        color:((204/255, 0, 0,1))
        text:"HIGH SCORE:"
        pos_hint:{'center_x':0.5,'center_y':0.8}

    Button:
        text:"PLAY AGAIN"
        id:random_button
        background_normal: ""
        background_color: (255/255, 232/255, 31/255, 1)
        font_size:root.width/16
        font_name:"propaganda"
        color:(204/255, 0, 0,1)
        pos_hint:{'center_x':0.5,'center_y':0.7}
        size_hint:0.5,0.075
        on_press:root.game_restart()

    Button:
        text:"QUIT"
        background_normal: ""
        background_color: (255/255, 232/255, 31/255, 1)
        font_size:root.width/16
        font_name:"propaganda"
        color:(204/255, 0, 0,1)
        pos_hint:{'center_x':0.5,'center_y':0.575}
        size_hint:0.5,0.075
        on_press:app.stop()